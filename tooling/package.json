{
  "name": "was-tooling",
  "version": "0.1.0",
  "description": "Validation and conversion tooling for Website Aesthetic Schema (WAS)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "generate:prompt": "tsx src/generators/generate_prompt.ts",
    "validate": "tsx src/validators/bundle_validator.ts",
    "convert:toml-to-json": "tsx src/converters/toml_to_json.ts",
    "convert:json-to-toml": "tsx src/converters/json_to_toml.ts",
    "health-check": "tsx src/utils/health-check.ts",
    "verify-deployment": "tsx src/utils/health-check.ts",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "design-system",
    "schema",
    "validation",
    "aesthetics"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "zod": "^3.22.4"
  }
}
