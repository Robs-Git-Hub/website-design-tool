# ---------------------------------------------------------------------------
# SKEUOMORPHISM
# ---------------------------------------------------------------------------

[[styles]]
id = "skeuomorphism"
display_name = "Skeuomorphism"
domain = "ui"
evidence_count = 3
notes = "Prominent in early smartphone UIs (for example early iOS designs), skeuomorphism was later supplanted by flat design as users became accustomed to digital interfaces. It has seen some nostalgic resurgences in modern designs."

[[styles.sources]]
title = "Skeuomorphism"
publication = "Nielsen Norman Group"
year = 2024
url = "https://www.nngroup.com/articles/skeuomorphism/"

[[styles.sources]]
title = "Skeuomorphic Design: A Complete Guide & 20 Best Examples"
publication = "Mockplus Blog"
year = 2024
url = "https://www.mockplus.com/blog/post/skeuomorphic-design-examples"

[[styles.sources]]
title = "What is skeuomorphism?"
publication = "Interaction Design Foundation"
year = 2015
url = "https://www.interaction-design.org/literature/topics/skeuomorphism"

styles.definitions = [
  "A design style that imitates real-world materials and objects in UI elements, using realistic textures, shadows, and lighting to create familiarity.",
  "Skeuomorphic design makes digital interfaces look like physical counterparts (e.g. a calculator app styled like a real calculator), bridging user familiarity between physical and digital."
]

styles.core_characteristics = [
  "Detailed, lifelike textures and surfaces (wood, metal, leather, etc.) on interface elements",
  "Use of drop shadows, bevels, and highlights to simulate depth and tactile form",
  "Icons and controls styled to resemble their real-world analogues (e.g. a notepad app looking like lined paper)",
  "Emphasizes familiarity and metaphor, helping users by leveraging real-world affordances"
]

styles.example_references = [
  "https://uxdesign.cc/on-apples-calculator-apps-e7ed1f423409",
  "https://winamp.com"
]

styles.related_terms = [
  "realism in UI",
  "rich textures"
]

