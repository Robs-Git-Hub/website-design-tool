# ---------------------------------------------------------------------------
# GLASSMORPHISM
# ---------------------------------------------------------------------------

[[styles]]
id = "glassmorphism"
display_name = "Glassmorphism"
domain = "ui"
evidence_count = 3
notes = "Popularized by operating systems like macOS and Windows, glassmorphism adds sleek hierarchy but must be used cautiously for accessibility."

[[styles.sources]]
title = "UI Design — How many ‘ism’s do you know? (Glassmorphism)"
publication = "Medium"
year = 2022
url = "https://medium.com/@freefigmatemplates/ui-design-how-many-isms-do-you-know-bee7e1f314fb"

[[styles.sources]]
title = "8 exciting visual trends you should know about in 2024"
publication = "Creative Bloq"
year = 2024
url = "https://www.creativebloq.com/news/2024-visual-trends"

[[styles.sources]]
title = "Glassmorphism: Definition and Best Practices"
publication = "Nielsen Norman Group"
year = 2024
url = "https://www.nngroup.com/articles/glassmorphism/"

styles.definitions = [
  "A contemporary UI trend where interface elements are translucent with blur effects, creating a frosted-glass appearance. These glass-like components allow layered designs by letting background colors and shapes show through softly."
]

styles.core_characteristics = [
  "Translucent panels with blurred backgrounds mimic frosted glass",
  "Layered interface elements to create depth while background content remains visible but indistinct",
  "Often paired with vibrant gradients or images behind the glass elements for contrast",
  "Use of subtle shadows or borders to enhance the glass-like separation and realism"
]

styles.example_references = [
  "https://espanium.com",
  "https://link-kit.com"
]

styles.related_terms = [
  "frosted glass UI",
  "blurring translucency",
  "Acrylic (Fluent Design)"
]

